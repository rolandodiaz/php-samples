{% extends 'SunatBundle:Sunat:layout.html.twig' %}
{% block body %}
<div class="container">
    {% include 'SunatBundle:Sunat:header.html.twig' %}
    {% include 'SunatBundle:Sunat:menu.html.twig' %}
    

        <div class="modal">
            <div class="modal-header">
                <h3>Formulario de Consulta</h3>
            </div>
            <div class="modal-body">
                <div class="row-fluid">
                            {{ form_start(form) }}
                            <div class="span2">
                                {{ form_label(form.ruc) }}
                            </div>
                            <div class="span3">
                                {{ form_errors(form.ruc) }}
                                {{ form_widget(form.ruc) }}
                            </div>
                            <div class="span2">
                                {{ form_widget(form.search) }}
                            </div>
                            {{ form_end(form) }}                            
                        </div>
            <br><br>
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Concepto</th>
                        <th>Ruc</th>
                        <th>Periodo</th>
                        <th>Resolucion</th>
                        <th>Codigo Tributo</th>
                        <th>Monto</th>
                        
                    </tr>
                </thead>
                <tbody>
                {% for item in pagination %}
                    <tr {% if loop.index is odd %}class="info"{% endif %}>
                        <td>{{ loop.index }}</td>
                        <td>{{ item.concept }}</td>
                        <td>{{ item.person }}</td>
                        <td>{{ item.period }}</td>
                        <td>{{ item.resolutionNumber }}</td>
                        <td>{{ item.taxCode }}</td>
                        <td>{{ item.amount }}</td>
                        
                    </tr>
                {% endfor %}
                </tbody>
            </table><br>
            <div class="navigation">
            {{ knp_pagination_render(pagination) }}
            </div>
            </div>    
        
            <div class="modal-footer">
                <a href="#" class="btn">Cerrar</a>
            </div>            
        </div>
        {% include 'SunatBundle:Sunat:footer.html.twig' %}
        </div>
{% endblock %}
