{% extends 'SunatBundle::layout.html.twig' %}
{% block css %}
<style type="text/css">
        body {
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }

        .form-signin {
            max-width: 300px;
            padding: 19px 29px 29px;
            margin: 0 auto 20px;
            background-color: #fff;
            border: 1px solid #e5e5e5;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
            border-radius: 5px;
            -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            box-shadow: 0 1px 2px rgba(0,0,0,.05);
        }
        .form-signin .form-signin-heading,
        .form-signin .checkbox {
            margin-bottom: 10px;
        }
        .form-signin input[type="text"],
        .form-signin input[type="password"] {
            font-size: 16px;
            height: auto;
            margin-bottom: 15px;
            padding: 7px 9px;
        }

    </style>
{% endblock %}
{% block body %}
    <div class="container">
        <form action="{{ path("_admin_security_check") }}" method="post" id="login" class="form-signin">
            <h2 class="form-signin-heading">Inicio de Sesión</h2>
    {% if error %}
            <div class="error">{{ error.message }}</div>
    {% endif %}
            <input type="text" class="input-block-level" placeholder="Usuario" id="username" name="_username">
            <input type="password" class="input-block-level" placeholder="Contraseña" id="password" name="_password">
            <label class="checkbox">
                <input type="checkbox" value="remember-me"> Recordarme
            </label>
            <button class="btn btn-large btn-primary" type="submit">Iniciar</button>
        </form>
    </div>
{% endblock %}